@model IEnumerable<DataLayer.Models.Examination>

@{
    ViewData["Title"] = "Examinations";
}

<h1>@ViewBag.PatientName examinations</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Type.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Type.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", "Examination", new { id = item.Id }, new { @class = "btn btn-outline-primary"})
                </td>
            </tr>
        }
    </tbody>
</table>
